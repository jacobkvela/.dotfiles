# ============================
# MPD Connection
# ============================
mpd_host = "127.0.0.1"
mpd_port = "6600"

# Optional settings for smoother usage
ncmpcpp_directory = "~/.config/ncmpcpp"
lyrics_directory = "~/.lyrics"
mpd_music_dir = "/mnt/nfs/music"           # Not required unless using local music paths

# UI settings (optional)
browser_display_mode = "columns"
playlist_display_mode = "classic"

# ============================
# Keybindings
# ============================
user_interface = "alternative"             # Recommended for better UI
